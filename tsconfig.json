{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "typeRoots": [
      "./src/@types"
    ],
    "types": ["jest", "@types/jest", "@testing-library/jest-dom"]
  },
  "exclude": ["node_modules", "**/*.test.tsx", "__tests__"]
}
